# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
NOTIFICATION_CHANNEL_ID=your_notification_channel_id_here
SCHEDULED_POST_CHANNEL_ID=your_scheduled_post_channel_id_here

# WhatsApp Green API Configuration
GREEN_API_INSTANCE_ID=your_green_api_instance_id_here
GREEN_API_TOKEN=your_green_api_token_here
WHATSAPP_GROUP_ID=your_whatsapp_group_id_here

# LLM Configuration (Choose one: openai, anthropic, perplexity)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here
LLM_PROVIDER=perplexity

# Scheduled Posts Configuration
MASTER_PROMPT=Create an engaging post about work from home trends and tips.
WFH_SEARCH_QUERY=work from home trends, remote work productivity, WFH mental health, home office setup, remote team collaboration, digital nomad lifestyle, work life balance remote, hybrid workplace culture, remote work tools, WFH ergonomics, virtual meetings fatigue, remote work career advancement
POST_SCHEDULE=0 9 * * *
POST_TIMEZONE=Asia/Jerusalem

# Bot Settings
LOG_LEVEL=info
PORT=3000

# Message Templates - Customizable
DISCORD_MESSAGE_TEMPLATE=@everyone 🎤 **{displayName}** just joined **{channelName}**! Join the work session! 🎉
WHATSAPP_MESSAGE_TEMPLATE=🎤 {displayName} בדיוק הצטרף לסשן עבודה! מי בא/ה?!  🎉

# Rate Limiting Controls
USER_COOLDOWN_SECONDS=5
USER_HOURLY_LIMIT=1
BURST_LIMIT_COUNT=10
BURST_LIMIT_WINDOW_MINUTES=10
WHATSAPP_HOURLY_LIMIT=50
GLOBAL_DAILY_LIMIT=500